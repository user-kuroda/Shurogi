<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :itemname, style: "ime-mode: active;" %>
  <span class="field">
    <%= f.collection_select :category,Category.all,:id,:categoryname %>
  </span>
  </div>


  <%= image_tag('nofav.png', { :border => '0', :alt => 'nofav',:size => '40x40',:id => 'nofav'}) %>

  <script type="text/javascript">
    $(function(){
      var img_name = "nofav.png";
      var img_name_over = "fav.png";
      $('#nofav').click(function(){
        $('#nofav').toggle(function(){
      	  $('#nofav').attr("src", img_name_over);
        },function(){
          $('#nofav').attr("src", img_name); 
        });
      });
    });
  </script> <br>

  通知<br/>
  <div class="field" style="display: inline-block " Align="center" >
    on　  off<br/>
    <%= f.radio_button :itemcall,"on" %>&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.radio_button :itemcall,"off" %>
  </div>|

  <div class="field" style="display: inline-block " Align="center">
    ほしい　かった<br/>
    <%= f.radio_button :situ,"want" %>&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.radio_button :situ,"bought" %>
  </div><br/>

    <div style="display: inline-block ">
    <camera><%= image_tag('camera.png', { :border => '0', :alt => '画像',:size => '60x60'}) %></camera></div>
    <span style="margin-right: 90px;"></span>

    <div style="display: inline-block ">
    <%= image_tag('itag.png', { :border => '0', :alt => 'タグ',:size => '60x60'}) %></div>
    <span style="margin-right: 90px;"></span>

    <div style="display: inline-block ">
    <%= image_tag('day.png', { :border => '0', :alt => '何の日',:size => '60x60'}) %></div><br/>

  <div class="field" style="display: inline-block " >
  <script type="text/javascript">
    $(function() {
       $('p').hide();
       $('camera').click(function(){
         $('p').toggle();
       });
    });
  </script> 

  <p div class="field">
    <%= f.file_field :image,accept: "image/jpeg" %>
    <%= f.file_field :image2,accept: "image/jpeg" %>
    <%= f.file_field :image3,accept: "image/jpeg" %>
  </div></p>
  </div>

    <span style="margin-right: 190px;"></span>
  <div class="field" style="display: inline-block " >
    <%= text_field_tag 'item[tag_list]',@item.tag_list.join(','), :placeholder => ",でタグの複数設定可" %>
  </div>

  <div class="field" style="display: inline-block " >
    
    <%= f.text_field :ani, :placeholder => "賞味期限、記念日etc." %>
  </div>

  <div class="field" style = "margin-left :345px">
    <%= f.date_select :day %>
  </div>
</br>
  <div class="actions" style = "margin-left :420px">
    <%=  image_submit_tag('OK.png')  %>
  </div>
<% end %>
