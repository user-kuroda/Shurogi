<head>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.noimg').error(function() {
        $(this).attr({
            src: '/noimg.png'
        });
      });
    });
  </script> 

   <meta http-equiv="Content-Type" content="text/html; charset=Shift_JIS">
   <meta http-equiv="content-style-type" content="text/css">
   <style type="text/css">
         *.float{
            float: left;
            margin-right: 1em;
          }
         *.floatclear{
            clear: both;
          }
          div.fav{
            position:absolute;
            top:5%;  
          }
          div.image{
            position:absolute;
            top:20%; 
            width:90%; text-align:center;
          }
          div.name{
            position:absolute;
            bottom:5%; 
            width:90%; text-align:center;
          }
          div.name_ph{
            position:absolute;
            bottom:0%; 
            width:90%; text-align:center;
          }
          @font-face{
            font-family: "amemuchi";
            src: url("<%= asset_path 'amemuchigothic-b.ttf' %>");
          }
          h1.pagetitle{
            font-family: "amemuchi";
            font-size: 3em;
          }
          h2.font{
            font-family: "amemuchi";
            font-size: 1em; 
          }
   </style>

         
   

</head>


<p id="notice"><%= notice %></p>
<% if session[:alert] != 0 %>
  <%  @items.each do |item| %>
    <% item.day - User.find(session[:usr]).call %>
    <% if item.itemcall == true && item.day - User.find(session[:usr]).call == Date.today  %>
    　 <% @call << "#{item.itemname}の#{item.ani}が近づいています。" %>
      <script type="text/javascript">
        $(document).ready(function(){
          $(".call").trigger("click");
          $(".call").hide();
        });
      </script>

      <button type="button" class="call" data-toggle="modal" data-target="#sampleModal">
      </button>

      <div class="modal fade" id="sampleModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
              <% @call.each do |call| %>
                  <h2 class="font"><%= call %></h2>
              <% end %>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><h2 class="font">閉じる</h2></button>
                  <div id="message">
                    <%= form_tag ({:action => "alert"}) do %>
                      <%= submit_tag "今後表示しない" %>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

<div align ="center">
  <% if @pagetitle == 1 %>
    <h1 class="pagetitle">#<%= params["tag"] %></h1>
  <% elsif @pagetitle == 0 %>
    <h1 class="pagetitle">▽<%= @catename %></h1>
  <% else %>
    <h1 class="pagetitle">Item</h1>
  <% end %>
</div>

  <div class="row">
    <% @items.count %>
    <% if @items.count == 0 %>
      <div style =" margin-left: 3em; margin-top: 5em;">
        <font size ="5" color="a9a9a9">
          １,　カテゴリーを登録<br>
          ２,　アイテムを登録<br>
          ３,　通知をON
        </font>
      </div>
    <% else %>
      <% @items.each do |item| %>
        <%# PC用 %>
        <%# item.image.present? %>
        <div class="visible-lg visible-md visible-sm">
          <div align="center" class="col-xs-6 col-sm-4" style="height:30em;">   
            <div class ="fav" style="margin-left: 70%;">
              <% if item.fav == true %>
                <%= image_tag('fav.png', { :border => '0', :alt => 'お気に入り', :width => '27em'}) %>
              <% end %>  
            </div>
            <%= link_to item do %>
              <div class="noimg">
                <div class="image">
                  <p style="display:inline;">
                    <% if item.image.present? == true %>
                      <%= image_tag show_image_item_path(item), class: ["large-img"] %>
                    <% elsif item.image2.present? == true %>
                      <%= image_tag show_image2_item_path(item), class: ["large-img"] %>
                    <% else %>
                      <%= image_tag show_image3_item_path(item), class: ["large-img","noimg"] %>
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
            <br />
            <div class="name">
              <h2 class="font"><%= item.itemname %></h2>
            </div>
          </div>
        </div>
        <%# iphone5用 %>
        <div class="visible-xs">
          <div align="center" class="col-xs-6 col-sm-4" style="height:14em;">   
            <div class ="fav" style="margin-left: 65%;">
              <% if item.fav == true %>
                <%= image_tag('fav.png', { :border => '0', :alt => 'お気に入り', :width => '15em'}) %>
              <% end %>  
            </div>
            <%= link_to item do %>
              <div class="noimg">
                <div class="image">
                  <p style="display:inline;">
                    <% if item.image.present? == true %>
                      <%= image_tag show_image_item_path(item), class: ["large-img"] %>
                    <% elsif item.image2.present? == true %>
                      <%= image_tag show_image2_item_path(item), class: ["large-img"] %>
                    <% else %>
                      <%= image_tag show_image3_item_path(item), class: ["large-img","noimg"] %>
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
            <br />
            <div class="name_ph">
              <h2 class="font"><%= item.itemname %></h2>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div> <!-- /.row -->

  


