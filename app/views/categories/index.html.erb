<p id="notice"><%= notice %></p>

<div align ="center">
  <h1>Category</h1>
  <%= link_to image_tag('plus.png', { :border => '0',:size => '40x40'}), new_category_path %>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
            <td>▽　<%= link_to category.categoryname, search_category_items_path(category: category) %></td>

          <td>　　<%= link_to '編集 ', edit_category_path(category) %>|</td>
          <td><%= link_to ' 消す', category, method: :delete, data: { confirm: 'マジで?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

