<style type="text/css">
  body {
      background-image: url(<%= asset_path 'back_image.png' %>);
    }
  div.name{
    position:absolute;
    bottom:5%; 
    width:90%; text-align:center;
  }
  @font-face{
    font-family: "amemuchi";
    src: url("<%= asset_path 'amemuchigothic-b.ttf' %>");
  }
  h1.namefont{
    font-family: "amemuchi";
    font-size: 4em;
  }
  h1.namefont2{
    font-family: "amemuchi";
    font-size: 3em;
  }
  h1.pagetitle{
  	font-family: "amemuchi";
    font-size: 3em;
  }
</style>

<h1 class="pagetitle">他のユーザー</h1>

<% @users.each do |user| %>
    <div align="center">
	    <span>
	        <%# PC用 %>
            <div class="visible-lg visible-md visible-sm">
	            <h1 class="namefont">
	                <%= link_to "@#{user.userid}", alluser_path(user) %>
	            </h1>
	        </div>
	        <%# iphone5用 %>
            <div class="visible-xs">
                <h1 class="namefont2">
	                <%= link_to "@#{user.userid}", alluser_path(user) %>
	            </h1>
            </div>
	    </span>
    </div>
<% end %>
