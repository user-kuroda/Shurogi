<!DOCTYPE html>
<html>
    <head>
        <title>Shurogi</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>

        <nav class="navbar navbar-default navbar-fixed-top">
	         <% if session[:usr] %>
		        <div class="navbar-header">
			        <button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#top-nav">
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
			        </button>
		        </div>
		
			    <div class="collapse navbar-collapse" id="top-nav">
			        <ul class="nav nav-pills nav-justified">
			          <li><%= link_to image_tag('set.png',{:size => "60x60" ,:border => '0',:alt=> 'sets'}), sets_path%></li>
			          <li><%= link_to image_tag('title.png',{ :border => '0',:alt=> 'items', :size => "400x60"}), items_path%></li>
			          <li><%= link_to image_tag('search.png',{ :border => '0',:alt=> 'search', :size => "60x60"}), items_path%></li>
			        </ul>
		        </div>
		    <% end %>
		</nav>


	    <nav class="navbar navbar-default navbar-fixed-bottom">
	        <% if session[:usr] %>
		        <div class="navbar-fotter">
				    <button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#bottom-nav">
					  <span class="icon-bar"></span>
					  <span class="icon-bar"></span>
					  <span class="icon-bar"></span>
				    </button>
			    </div>
			
			    <div class="collapse navbar-collapse" id="bottom-nav">
				    <ul class="nav nav-pills nav-justified">
					  <li><%= link_to image_tag('fav_link.png',{ :border => '0',:alt=> 'fav', :size => "60x60"}), favcateg_items_path%></li>
					  <li><%= link_to image_tag('category.png',{ :border => '0',:alt=> 'category', :size => "60x60"}), categories_path%></li>
					  <li><%= link_to image_tag('item.png',{ :border => '0',:alt=> 'item', :size => "60x60"}), new_item_path%></li>
					  <li><%= link_to image_tag('tag.png',{ :border => '0',:alt=> 'tag', :size => "60x60"}), tags_index_path%></li>
					  <li><%= link_to image_tag('want.png',{ :border => '0',:alt=> 'want', :size => "60x60"}), wantcateg_items_path%></li>
				    </ul>
			    </div>
			<% end %>
	    </nav>
	      <style type="text/css">
		.nav-justified {
		    display: table;
		    table-layout: fixed;
		    width: 100%;
		}
		.navbar .nav-justified > li {
		    display: table-cell;
		    width: 100%;
		}
		</style>

    </head>
    <body style = "padding-top: 70px ;padding-bottom: 70px"}>

	    <div class="container">
	      <%= yield %>
	    </div>


     </body>

</html>
