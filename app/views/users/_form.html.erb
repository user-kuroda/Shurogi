<head>
<style type="text/css">

 .btn-circle.btn-lg2 {
  width: 80px;
  height: 50px;
  padding: 10px 16px;
  font-size: 18px;
  line-height: 1.33;
  border-radius: 25px;
  }

  .darkgray {
    color: #808080;
  }
  .gray{
    color: #f2f2f2;
  }

</style></head>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :userid %><br>
    <%= f.text_field :userid %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :mail %><br>
    <%= f.text_field :mail %>
  <span class="field">
    <%= select :user, :mailback, ["@docomo.ne.jp","@softbank.ne.jp","@ezweb.ne.jp"] %>
  </span>
  </div>

  <div class="field">
    <%= f.label :pass %><br>
    ※8字以上、半角英数字のみ<br>
    <%= f.password_field :pass %>
    <%= f.password_field :pass_confirmation %>
  </div>

  <div class="field"> 
    <%= f.label :call %><br> 
    <%= f.number_field :call, min: 0  %>日前
  </div> 

  
  <div class="actions" align ="center">
    <%=  button_tag :type =>"submit", :class =>"btn btn-gray btn-circle btn-lg2 darkgray" do %>
    <span style="text-align: center;">登録</span>
    <% end %>
  </div>


  <% end %>
